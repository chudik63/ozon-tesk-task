type Post {
  id: Int!
  title: String!
  content: String!
  author: Int!
  allowComments: Boolean!
  createdAt: String!
  updatedAt: String!
  comments: [Comment]
}

type Comment {
  id: Int!
  postId: Int!
  parentId: Int
  author: Int!
  content: String!
  createdAt: String!
  updatedAt: String!
  replies: [Comment]
}

type Query {
  posts(page: Int = 1, limit: Int = 10): [Post]

  post(id: Int!): Post

  comments(postId: Int!, page: Int = 1, limit: Int = 10): [Comment]

  deletePost(postId: Int!): Int!
}

type Mutation {
  createPost(input: CreatePostInput!): Post!
  
  createComment(input: CreateCommentInput!): Comment!
}

type Subscription {
  commentAdded(postId: Int!): Comment!
}

input CreatePostInput {
  title: String!
  content: String!
  allowComments: Boolean!
}

input CreateCommentInput {
  postId: Int!
  parentId: Int
  content: String!
}